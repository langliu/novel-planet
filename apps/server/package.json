{
  "dependencies": {
    "@aws-sdk/client-s3": "^3.901.0",
    "@libsql/client": "^0.15.15",
    "@orpc/client": "^1.9.3",
    "@orpc/openapi": "^1.9.3",
    "@orpc/server": "^1.9.3",
    "@orpc/zod": "^1.9.3",
    "better-auth": "^1.3.26",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.6",
    "hono": "^4.9.9",
    "nanoid": "^5.1.6",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/node": "^24.6.2",
    "drizzle-kit": "^0.31.5",
    "tsdown": "^0.15.6",
    "typescript": "^5.9.3",
    "wrangler": "^4.42.0"
  },
  "main": "src/index.ts",
  "name": "server",
  "scripts": {
    "build": "wrangler deploy --dry-run",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate-local": "wrangler d1 migrations apply novel-plant --local",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "deploy": "wrangler deploy",
    "dev": "wrangler dev --port=3000",
    "start": "wrangler dev"
  },
  "type": "module"
}
